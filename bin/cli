#! /usr/bin/env node

const commander = require("commander");
const program = new commander.Command();
// å®šä¹‰æŒ‡ä»¤
program
  .version(require("../package.json").version)
  .usage("<command> [options]");

program
  .command("init")
  .description("create a new project ðŸ”¨ ðŸ”¨ ðŸ”¨")
  .option("-i, --item [name]", "Please enter a project name ðŸ”¨")
  .action(({ item }) => {
    const { action } = require("../lib/init");
    action(item);
  });

program
  .command("create")
  .description("create a new component from a template ðŸšš ðŸšš ðŸšš")
  .option("-c, --component [name]", "Please enter a component name ðŸšš ðŸšš ðŸšš")
  .option(
    "-p, --path [path]",
    "Please enter the path to create a component ðŸšš ðŸšš ðŸšš"
  )
  .action(({ component, path }) => {
    const { action } = require("../lib/create");
    action(component, path);
  });

program.parse(process.argv);
